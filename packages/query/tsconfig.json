{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "jsx": "react-jsx",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "paths": {
      "@titanstate/core": ["../core/src"],
      "@titanstate/core/*": ["../core/src/*"],
      "@titanstate/react": ["../react/src"],
      "@titanstate/react/*": ["../react/src/*"],
      "@titanstate/persist": ["../persist/src"],
      "@titanstate/persist/*": ["../persist/src/*"],
      "@titanstate/types": ["../types/src"],
      "@titanstate/types/*": ["../types/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.test.tsx"],
  "references": [
    {
      "path": "../core"
    },
    {
      "path": "../react"
    },
    {
      "path": "../persist"
    },
    {
      "path": "../types"
    }
  ]
}

