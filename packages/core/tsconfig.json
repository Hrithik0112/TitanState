{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "paths": {
      "@titanstate/types": ["../types/src"],
      "@titanstate/types/*": ["../types/src/*"],
      "@titanstate/persist": ["../persist/src"],
      "@titanstate/persist/*": ["../persist/src/*"],
      "@titanstate/devtools": ["../devtools/src"],
      "@titanstate/devtools/*": ["../devtools/src/*"],
      "@titanstate/worker": ["../worker/src"],
      "@titanstate/worker/*": ["../worker/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"],
  "references": [
    {
      "path": "../types"
    },
    {
      "path": "../persist"
    },
    {
      "path": "../devtools"
    },
    {
      "path": "../worker"
    }
  ]
}

